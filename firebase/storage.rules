rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Function to check role
    function hasRole(role) {
      return request.auth != null && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Site Photos (Audits/Projects)
    match /site_photos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if hasRole('engineer') || hasRole('manager') || hasRole('admin');
    }
    
    // Signatures
    match /signatures/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Sometimes clients sign
    }
    
    // Documents (Contracts, Reports)
    match /documents/{allPaths=**} {
      allow read: if hasRole('sales') || hasRole('manager') || hasRole('admin') || hasRole('engineer');
      allow write: if hasRole('sales') || hasRole('manager') || hasRole('admin');
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
